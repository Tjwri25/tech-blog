
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>

      <a class="title" href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p class="created">Created by {{project.user.name}} on {{format_date project.date_created}}</p>
    
  </div>
  <div class="col-md-7">
    <p class="description">
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}


<div class="row mt-4">
  <div class="col-md-5"></div>
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Post Title:</label> <br>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Content:</label> <br>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>

  </div>
  <div class="col"></div>

  <script src="./js/profile.js"></script>